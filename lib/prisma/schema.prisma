generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Vendor {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  storeName String?
  products  Product[]
  createdAt DateTime @default(now())
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Int
  imageUrl    String
  vendorId    String
  vendor      Vendor   @relation(fields: [vendorId], references: [id])
  createdAt   DateTime @default(now())
}
